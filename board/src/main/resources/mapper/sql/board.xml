<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jisun.board.dao.BoardDao">

    <!--list의 search-->
    <sql id="search">
        <if test="searchCategory != null and searchInput != '' ">
            <choose>
                <when test="searchCategory=='all'">
                    where (title    like '%' || #{searchInput} || '%') or
                          (name     like '%' || #{searchInput} || '%') or
                          (content  like '%' || #{searchInput} || '%')
                </when>
                <when test="searchCategory=='title'">
                    where title like '%' || #{searchInput} || '%'
                </when>
                <when test="searchCategory=='name'">
                    where name like '%' || #{searchInput} || '%'
                </when>
                <when test="searchCategory=='content'">
                    where content like '%' || #{searchInput} || '%'
                </when>
            </choose>
        </if>
    </sql>


    <!--list의 페이지네이션-->
    <sql id="pagination">
        ORDER BY id DESC offset #{startIndex}
        ROWS FETCH FIRST #{pageSize}
        ROWS ONLY
    </sql>


    <!--list의 글 개수-->
    <select id="selectBoardCount"
            resultType="Integer">
        select count(*) as count
        from board
    </select>



    <!--list보기-->
    <select id="selectBoardList"
            resultType="BoardDto"
            parameterType="map">
        select *
        from board
        <include refid="search"></include>
        <include refid="pagination"></include>
    </select>







    <select id="selectBoardPagination"
            resultType="BoardDto"
            parameterType="PageDto">
        <![CDATA[
            select * from (
                select rownum as num , b.* from
                    (select * from board order by regdate desc) b
            )
            where num >= #{startPage} and num <= #{endPage}
        ]]>
    </select>




    <!--view-->
    <select id="selectBoardView"
            parameterType="Integer"
            resultType="BoardDto">
        select *
        from board
        where id = #{id}
    </select>


    <!--Write-->
    <insert id="insertBoardWrite"
            parameterType="BoardDto">
    insert into board
    values(board_seq.nextval,
            #{name},
            #{title},
            #{content},
            sysdate)
    </insert>

    <!--modify-->
    <update id="updateBoardModify"
            parameterType="BoardDto">
    update board
    set name=#{name},
        title=#{title},
        content=#{content}
    where id=#{id}
    </update>


    <!--delete-->
    <delete id="deleteBoard"
            parameterType="Integer">
    delete from board
    where id = #{id}
    </delete>



</mapper>