<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jisun.board.dao.BoardDao">

    <select id="selectBoardList"
            resultType="BoardDto">
        select * from board
    </select>

    <select id="selectBoardView"
            parameterType="Integer"
            resultType="BoardDto">
        select *
        from board
        where id = #{id}
    </select>


    <insert id="insertBoardWrite"
            parameterType="BoardDto">
    insert into board
    values(board_seq.nextval,
            #{name},
            #{title},
            #{content},
            sysdate)
    </insert>
    
    <delete id="deleteBoard"
            parameterType="Integer">
    delete from board
    where id = #{id}
    </delete>



</mapper>